<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bacgrnd_1"
    tools:context="com.example.herbadmin.AddPlantActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="20dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="ADD A PLANT"
                android:textColor="@color/green"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/plant_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edt_bg"
                android:drawablePadding="5dp"
                android:hint="Plant Name"
                android:inputType="textPersonName"
                android:minHeight="45dp"
                android:paddingStart="10dp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/bot_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/plant_name"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edt_bg"
                android:drawablePadding="5dp"
                android:hint="Botanical Name"
                android:inputType="textPersonName"
                android:minHeight="45dp"
                android:paddingStart="10dp"
                android:textSize="15sp" />


            <EditText
                android:id="@+id/about_plant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bot_name"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edt_bg"
                android:drawablePadding="5dp"
                android:hint="About Plant"
                android:inputType="textMultiLine"
                android:minHeight="45dp"
                android:paddingStart="10dp"
                android:textSize="15sp" />


            <EditText
                android:id="@+id/pros_cons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/about_plant"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edt_bg"
                android:drawablePadding="5dp"
                android:hint="Benefits and Dangers"
                android:inputType="textMultiLine"
                android:minHeight="45dp"
                android:paddingStart="10dp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/preparation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pros_cons"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edt_bg"
                android:drawablePadding="5dp"
                android:hint="How to Prepare and Administer"
                android:inputType="textMultiLine"
                android:minHeight="45dp"
                android:paddingStart="10dp"
                android:textSize="15sp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/preparation"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/green_gradient"
                android:minWidth="200dp"
                android:text="Add Plant"
                android:textColor="@color/white" />




        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>