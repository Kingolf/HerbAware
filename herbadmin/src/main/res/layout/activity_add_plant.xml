<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bacgrnd_1"
    tools:context="com.example.herbadmin.AddPlantActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/green_gradient"
            android:paddingStart="10dp"
            android:src="@drawable/back_ic_2" />




        <androidx.cardview.widget.CardView
            android:id="@+id/card_add_criminal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">



                <TextView
                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="monospace"
                    android:text="Add Plant"
                    android:textColor="@color/green"
                    android:textSize="30sp"
                    android:textStyle="bold" />


                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/plant_img"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_below="@id/txt"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    app:civ_border_color="#3f51b5"
                    app:civ_border_width="3dp"
                    app:civ_shadow="true"
                    app:civ_shadow_color="#3f51b5"
                    app:civ_shadow_radius="10dp" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_add_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/plant_img"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/green_gradient"
                    android:minWidth="100dp"
                    android:text="Add Image"
                    android:textColor="@color/white"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/plant_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btn_add_image"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edt_bg"
                    android:drawablePadding="5dp"
                    android:hint="Plant Name"
                    android:inputType="text"
                    android:minHeight="45dp"
                    android:paddingStart="10dp"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:id="@+id/progess_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/green_gradient"
                    android:elevation="8dp"
                    android:padding="20dp"
                    android:visibility="invisible">

                    <ProgressBar
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true" />
                </RelativeLayout>

                <EditText

                    android:id="@+id/bot_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/plant_name"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edt_bg"
                    android:drawablePadding="5dp"
                    android:hint="Botanical Name"
                    android:inputType="text"
                    android:minHeight="45dp"
                    android:paddingStart="10dp"
                    android:textSize="15sp" />

                <EditText

                    android:id="@+id/dop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bot_name"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edt_bg"
                    android:drawablePadding="5dp"
                    android:hint="Details on Plant"
                    android:inputType="textMultiLine"
                    android:minHeight="45dp"
                    android:paddingStart="10dp"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/bnr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dop"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edt_bg"
                    android:drawablePadding="5dp"
                    android:hint="Benefits and Risks"
                    android:inputType="textMultiLine"
                    android:minHeight="45dp"
                    android:paddingStart="10dp"
                    android:textSize="15sp" />


                <EditText

                    android:id="@+id/prepare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bnr"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edt_bg"
                    android:drawablePadding="5dp"
                    android:hint="How to Prepare and Administer"
                    android:inputType="textMultiLine"
                    android:minHeight="45dp"
                    android:paddingStart="10dp"
                    android:textSize="15sp" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/prepare"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/green_gradient"
                    android:minWidth="180dp"
                    android:text="Add"
                    android:textColor="@color/white"
                    android:textStyle="bold" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>


</ScrollView>